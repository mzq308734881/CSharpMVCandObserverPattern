@model Pager<WorkPlan>
<div class="cdiv pd20 ptmg ow tyhg5">
    <div class="ps hei-a85">
        <h3 class="tydvrg_tit">
            我的工作计划
        </h3>
        <div class="dhg2"></div>
        <!-- <div class="cdiv"> -->
        <div class="tydl ptmg_stp_dl">
            <a class="ow bd_rd5 fr tydv_but" href="@Url.Action("add")" data-ajax="true"  data-ajax-mode="replace" data-ajax-update="#teacherpage">添加</a>
        </div>
        <div class="dhg3"></div>
        <div class="cdiv ps" id="content_cp" style="height: 100%;">
            <div class="r_con_over chenposi" id="abloeds">
                <div class="tydvrg_bylw_table">
                    <div class="pment">
                        <table width="100%" cellpadding="0" cellspacing="0">
                            <thead>
                            <tr>
                                <th>提醒时间</th>
                                <th>主题</th>
                                <th>内容</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@string.Format("{0:yyyy年MM月dd日}", item.RemindTime)</td>
                                    <td>@item.Title</td>
                                    <td>@StringHelper.GetNoHtmlSubString(item.Comment,20)</td>
                                    <td>
                                        @if (item.IsRemind == 0)
                                        {
                                            <a href="@Url.Action("close", new {id = item.ID})" class="ow bd_rd5 tydv_but mytc_but1 mg_tpbt_5" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#teacherpage">关闭提醒</a>
                                        }
                                        else
                                        {
                                            <input type="button" class="ow bd_rd5 tydv_but twp_but" value="已关闭" />
                                        }
                                    </td>
                                    <td><a href="@Url.Action("detail",new {id=item.ID})" data-ajax="true"  data-ajax-mode="replace" data-ajax-update="#teacherpage">查看详情</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- </div> -->
        </div>
        <div class="cdiv_cen" id="mg-btn-pos">
            @UIHelper.StudentPageHelper("#teacherpage", "plan", "search", null, null, null, Model.TotalPages, Model.PageIndex, Model.PageSize, Model.TotalCount, Model.HasPreviousPage, Model.HasNextPage, Model.PageList)
        </div>
    </div>
</div>