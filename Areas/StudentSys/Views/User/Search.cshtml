                <label>邮箱：</label>
                <span class="ablogs_pwd_check ">@Model.UserInfo.Email</span>
            </div>
            <div class="ablogs_pwd_item">
                <label>QQ：</label>
                <span class="ablogs_pwd_check ">@Model.UserInfo.QQ</span>
            </div>
            <div class="ablogs_pwd_item">
                <label>个人简介：</label>
                <span class="ablogs_pwd_check ">@Model.UserInfo.Comment</span>
            </div>
