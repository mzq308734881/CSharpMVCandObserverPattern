@model Student

<h3 class="tydvrg_tit">基本信息</h3>
<div class="dhg2"></div>
<div class="cdiv ps" id="content_cp" style="height:65%;">
    <div class="r_con_over chenposi" id="abloeds">
        <div class="ablogs_pwd">
            <div class="ablogs_pwd_item">
                <p class="">
                    <span class="tydvrg_hf">姓名：</span>
                    <span class="">@Model.UserInfo.LoginName</span>
                </p>
            </div>
            <div class="ablogs_pwd_item">
