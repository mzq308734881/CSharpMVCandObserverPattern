                $.post("@Url.Action("enterstartprocess", "stage")", function (data) {
                    if (data.State != 1)
                        layer.alert(data.Message);
                    else {
                        layer.msg(data.Message);
                        window.location.reload();
                    }
                });
                layer.close(index);
                layer.close(index);
            });
        };
        function stagetoend() {
            var $str = "是否结束当前论文？论文结束后将无法再开启！且学生、导师将无法再进行任何操作！！";
