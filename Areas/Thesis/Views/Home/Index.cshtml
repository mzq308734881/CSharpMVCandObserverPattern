                        window.location.reload();
                    }
                });
                layer.close(index);
                layer.close(index);
            });
        };
        function changeprocess(id) {
            layer.confirm('是否要进入下一流程？流程开启不可逆！', { icon: 3, title: '流程变更' }, function (index) {
