@model TreatiseConfigViewModel
@{
    var isfirst = Model.TreatiseStage == 1;
}
@if (isfirst)
{
    <div class="col-lg-offset-10 col-lg-2">
        <button type="button" class="btn btn-info" onclick="stagetoprocess()">进入流程阶段</button>
    </div>
}
<div class="row m-t-sm">
    <div class="col-lg-12">
        <div class="panel blank-panel">
            <div class="panel-heading">
                <div class="panel-options">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#tab-subjectchoose">6、选题情况</a>
                        </li>
                        <li>
                            <a data-toggle="tabajax" href="@Url.Action("search", "studentsubject")" data-target="#tab-studentsubject">7、选题审核</a>
                        </li>
                        @*<li>
                            <a data-toggle="tabajax" href="@Url.Action("search","subjectstudent")" data-target="#tab-studentsubject">8、选题详情</a>
                        </li>*@
                    </ul>
                </div>
            </div>

            <div class="panel-body">
                <div class="tab-content">
                    <div id="tab-subjectchoose" class="tab-pane active">
                        <div class="row">
                            <div class="col-lg-5">
                                <dl class="dl-horizontal">
                                    <dt>学生人数：</dt>
                                    <dd>@Model.StudentCount</dd>
                                    <dt>已选题人数：</dt>
                                    <dd id="choosecount">@(Model.StudentCount - Model.UnCount)</dd>
                                    <dt>未选题人数：</dt>
                                    <dd id="unchoosecount">@Model.UnCount</dd>
                                </dl>
                            </div>
                            <div class="col-lg-7" id="cluster_info">
                                <dl class="dl-horizontal">
                                    <dt>所属专业：</dt>
                                    <dd>@(Model.Treatise.School != null ? Model.Treatise.School.InfoName : "")</dd>
                                    <dt>开始时间：</dt>
                                    <dd>@string.Format("{0:yyyy年 MM月 dd日 HH:mm}", Model.Treatise.StartTime)</dd>
                                    <dt>结束时间：</dt>
                                    <dd>@string.Format("{0:yyyy年 MM月 dd日 HH:mm}", Model.Treatise.EndTime)</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div id="tab-studentsubject" class="tab-pane @(isfirst ? "active" : "")">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>