@model TreatiseStudent
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">所属:</label>
                    <div class="col-sm-4 form-control-static">
                        @StaticHelper.GetSchoolFullName(Model.Student.SchoolID ?? 0)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">学号:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.LoginName)
                    </div>
                    <label class="col-sm-2 control-label">姓名:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.TrueName)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">联系电话:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.Tel)
                    </div>
                    <label class="col-sm-2 control-label">邮箱:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.Email)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">QQ:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.QQ)
                    </div>
                    <label class="col-sm-2 control-label">微信:</label>
                    <div class="col-sm-4 form-control-static">
                        @Html.Raw(Model.Student.UserInfo.WeChat)
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">性别:</label>
                    <div class="col-sm-4 form-control-static">
                        @SelectListHelper.GetSexName(Model.Student.UserInfo.Sex)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
