    @Html.Partial("search")
</div>
@section menu{
    <div class="footer_menu_box">
        <div class="menu">
            <div class="bt-name">点我吧!</div>
            <div class="sanjiao"></div>
            <div class="new-sub">
                <ul>
                    <li class="active"><a href="@Url.Action("search", "question")" class="ty_tcurrt" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#teacherpage">学生提问</a></li>
                  
                </ul>
                <div class="tiggle"></div>
                <div class="innertiggle"></div>
            </div>
        </div>
