@model EmailSet
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>邮件设置</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/prms/">主页</a>
            </li>
            <li>
                <a href="/prms/emailset">邮件设置</a>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal" id="treateacher">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Host:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(d => d.Host, new { @class = "form-control", datatype = "n" })
                                <span class="help-block m-b-none Validform_checktip"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">端口:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(d => d.Port, new { @class = "form-control", datatype = "isIntGteZero" })
                                <span class="help-block m-b-none Validform_checktip"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送邮件地址:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(d => d.Email, new { @class = "form-control", datatype = "*" })
                                <span class="help-block m-b-none Validform_checktip"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送邮件密码:</label>
                            <div class="col-sm-8">
                                <input type="password" id="pwd" name="pwd" class="form-control" ,datatype="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit">保存内容</button>
                                <a class="btn btn-white" onclick="return confirm('返回后您输入的数据将不被储存，确认返回吗？')" href="/prms/emailset">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $.getScript('/Content/Scripts/select2/select2.js', function () {
                $.getScript("/Content/Scripts/Validform_v5.3.2.js", function () {
                    $(".chosen-select").select2();
                    $("#treateacher").Validform(
                  {
                      tiptype: 3,
                      ignoreHidden: true
                  });
                });
            });
        });
    </script>
}




