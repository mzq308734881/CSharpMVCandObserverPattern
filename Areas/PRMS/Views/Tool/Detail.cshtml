@model Tool
<script src="~/Content/admin/js/jquery-2.1.1.min.js"></script>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>工具与资源查看</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/prms/">主页</a>
            </li>
            <li>
                <a href="/prms/tool">工具与资源管理</a>
            </li>
            <li>
                <strong>工具或资源查看</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form method="post" class="form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">名称:</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">@Model.FileName</p>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">类型:</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">@SelectListHelper.GetType(Model.ToolType)</p>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">是否共享:</label>
                                <div class="col-lg-10">
                                    <p class="form-control-static">@SelectListHelper.GetIsOrNoName(Model.IsSharing)</p>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                        </form>
                    </div>
                    <div class="col-sm-4 col-sm-offset-2 ">
                        <a class="btn btn-white" onclick="return confirm('返回后您输入的数据将不被储存，确认返回吗？')" href="/prms/tool">取消</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
