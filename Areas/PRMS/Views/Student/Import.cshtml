                $.get("/prms/studnet/importdb", function (data) {
                    if (data.State == 0) {
                        alert(data.ErrorMessage);
                    } else {
                        alert("导入成功！");
                        window.location.href = '/prms/studnet';
                    }
                });
                layer.close(ii);
            }
        });
    });
</script>
