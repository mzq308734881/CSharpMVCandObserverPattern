@model IQueryable<ModuleAction>
@{
    var id = ViewBag.MoudelID;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>模块添加</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/prms/">主页</a>
            </li>
            <li>
                <strong>模块管理</strong>
            </li>
            <li>
                <strong>Action管理</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>模块管理</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-7">
                        </div>
                        <div class="col-md-1">
                            <div class="input-group">
                                <a class="btn btn-sm btn-primary" href="/prms/module/actionadd/@id"> 添加</a>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Action名称</th>
                                    <th>Action地址</th>
                                    <th>上级模块</th>
                                    <th>样式</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" checked class="i-checks" name="input[]">
                                        </td>
                                        <td>@item.ActionName</td>
                                        <td>@item.ActionUrl</td>
                                        @if (item.ModuleID != null)
                                        {
                                            <td>@item.Module.ModuleName</td>
                                        }
                                        else
                                        {
                                            <td>无上级</td>
                                        }
                                        @if (string.IsNullOrWhiteSpace(item.StyleName))
                                        {
                                            <td>无</td>
                                        }
                                        else
                                        {
                                            <td><span class="@item.StyleName"></span></td>
                                        }
                                        <td>
                                            <a class="btn btn-sm btn-primary" href="/prms/module/actiondelete/@item.ID">删除</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
