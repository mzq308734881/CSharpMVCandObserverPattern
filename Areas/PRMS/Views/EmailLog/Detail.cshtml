@model EmailLog
@{
    var school = ViewBag.SchoolName;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>邮件记录</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/prms/">主页</a>
            </li>
            <li>
                <a href="/prms/emaillog">邮件记录</a>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-4">
            <div class="input-group">
                <form action="/prms/emailset/search" method="post">
                    <div class="input-group">
                        <input type="text" name="keyword" placeholder="标题名称" class="form-control"> <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">
                                搜索
                            </button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form method="post" class="form-horizontal">
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Title:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.Title)
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">邮件内容:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.Comment)
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">类型:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.EmailType)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送时间:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.CreateTime)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发件人:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.CreateUser)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发送结果:</label>
                            <div class="col-sm-8 form-control-static">
                                @Html.Raw(Model.Message)
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" onclick="return confirm('返回后您输入的数据将不被储存，确认返回吗？')" href="/prms/emaillog">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>