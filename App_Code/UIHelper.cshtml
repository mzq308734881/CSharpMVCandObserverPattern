@helper TeacherPageHelper(string divname, string controllername, string actionname, string ParameterName, int? ParameterValue, int? id, int TotalPages, int PageIndex, int PageSize, int TotalCount, bool HasPreviousPage, bool HasNextPage, List<int> PageList)
{
