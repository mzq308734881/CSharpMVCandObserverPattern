@helper PageHelper(string controllername, int TotalPages, int PageIndex, int PageSize, int TotalCount, bool HasPreviousPage, bool HasNextPage, List<int> PageList)
{
var url = "";
if (controllername.Substring(0, 1) == "/")
{
    url = "/prms" + controllername + "/search";
}
else
{
    url = "/prms/" + controllername + "/search";
}
if (TotalPages <= 0)
{
    return;
}
    <div class="col-sm-6"><div class="dataTables_info" role="alert" aria-live="polite" aria-relevant="all">当前页 第@(PageIndex)页  @(PageSize)条/页  共 @TotalCount 条/@TotalPages 页</div></div>
    <div class="col-sm-6">
        <div class="dataTables_paginate paging_simple_numbers">
            <ul class="pagination">
                @if (HasPreviousPage)
                {
                    <li class="paginate_button previous"><a href="@url/1">首页</a></li>
                    <li class="paginate_button previous"><a href="@url/@PageIndex-1">上一页</a></li>
                }
                else
                {
                    <li class="paginate_button previous disabled"><a href="#">首页</a></li>
                    <li class="paginate_button previous disabled"><a href="#">上一页</a></li>
                }
                @foreach (var i in PageList)
                {
                    if (PageIndex == i)
                    {
                        <li class="paginate_button active"><a href="@url/@i">@i.ToString()</a></li>

                    }
                    else
                    {
                        <li class="paginate_button"><a href="@url/@i">@i.ToString()</a></li>
                    }

                }
                @if (HasNextPage)
                {
                    <li class="paginate_button next"><a href="@url/@(PageIndex + 1)">下一页</a></li>
                    <li class="paginate_button next"><a href="@url/@TotalPages">末页</a></li>
                }
                else
                {
                    <li class="paginate_button next disabled"><a href="#">下一页</a></li>
                    <li class="paginate_button next disabled"><a href="#">末页</a></li>
                }
            </ul>
        </div>
    </div>
}
